{
  "name": "smart-lighting-scenes",
  "version": "1.0.0",
  "private": true,
  "description": "Smart Lighting Scenes with Natural Language - Monorepo",
  "workspaces": [
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && ./gradlew bootRun",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./gradlew build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && ./gradlew test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.yml logs -f"
  },
  "keywords": [
    "smart-home",
    "lighting",
    "natural-language",
    "iot",
    "esp32"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
